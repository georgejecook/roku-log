{
  "name": "roku-log",
  "version": "0.10.3",
  "description": "Simple logging library for roku.",
  "directories": {
    "doc": "docs"
  },
  "files": [
    "dist/**/!(manifest)*"
  ],
  "dependencies": {
    "@rokucommunity/bslib": "^0.1.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.14.16",
    "auto-changelog": "^2.2.1",
    "brighterscript": "^0.64.4",
    "chai": "^4.2.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "fs-extra": "^9.1.0",
    "mocha": "^8.1.3",
    "nyc": "^15.1.0",
    "ropm": "^0.9.1",
    "source-map": "^0.7.3",
    "standard-version": "^9.5.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.1.3",
    "undent": "^0.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/georgejecook/roku-log.git"
  },
  "keywords": [
    "ropm",
    "brightscript",
    "mvvm",
    "framework",
    "fun"
  ],
  "author": "George Cook",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/georgejecook/roku-log/issues"
  },
  "homepage": "https://github.com/georgejecook/roku-log#readme",
  "ts-node": {
    "transpileOnly": true,
    "compileOptions": {
      "incremental": true,
      "allowJs": false
    }
  },
  "ropm": {
    "rootDir": "src",
    "packageRootDir": "dist",
    "prefixMatching": "expanded"
  },
  "scripts": {
    "build": "node scripts/run.js && ts-node scripts/move-generated-files.js",
    "build-test": "node scripts/run-test.js",
    "commit": "cz"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}